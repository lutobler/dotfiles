label-active = %name%
label-active-foreground = #000000
label-active-background = #0ba4ae
label-occupied-padding = 1
label-occupied = %name%
label-occupied-foreground = #000000
label-occupied-background = #3F4D4D
label-urgent-padding = 1
label-urgent = %name%
